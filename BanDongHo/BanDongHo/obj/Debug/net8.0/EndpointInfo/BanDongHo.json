          "total": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "InvoiceDTO": {
        "required": [
          "userId"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "minLength": 1,
            "type": "string"
          },
          "userEmail": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
